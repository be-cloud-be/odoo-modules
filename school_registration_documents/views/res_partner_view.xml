<openerp>
    <data>
        <!-- Add program for student form view -->
        <record id="view_student_kanban_school" model="ir.ui.view">
            <field name="name">view.res.partner.kanban.school.docs</field>
            <field name="model">res.partner</field>
            <field name="inherit_id" ref="base.res_partner_kanban_view" />
            <field eval="25" name="priority" />
            <field name="arch" type="xml">
                <field name="mobile" position="after">
                    <field name="official_document_missing_count" />
                </field>
                <xpath expr="//div[@class='oe_kanban_partner_links']" position="inside">
                    <span class="badge" style="color:white;background-color:red;" attrs="{'invisible': [('official_document_missing_count','=',0)]}" >Missing <field name='official_document_missing_count' /> doc(s)</span>
                </xpath>
            </field>
        </record>
        
        <!-- Add program for student form view -->
        <record id="view_student_form_school_docs" model="ir.ui.view">
            <field name="name">view.res.partner.form.school.docs</field>
            <field name="model">res.partner</field>
            <field name="inherit_id" ref="school_registration.view_student_form_school_reg" />
            <field eval="25" name="priority" />
            <field name="arch" type="xml">
                <xpath expr="//header" position="inside">
                    <button string="Add documents" type="action" name="%(action_document_add_wizard)d" class="oe_highlight" context="{'default_student_id': active_id}" groups="school_management.group_employee"/>
                </xpath>
                <xpath expr="//div[@name='button_box']" position="inside">
                    <button name="action_view_documents"
                        type="object"
                        class="oe_stat_button"
                        icon="fa-file"
                        attrs="{'invisible': ['|',('official_document_count', '=', 0),('official_document_missing_count', '!=', 0)]}">
                        <field name="official_document_count" widget="statinfo" string="Documents"/>
                    </button>
                    <button name="action_view_documents"
                        type="object"
                        class="oe_stat_button btn-danger"
                        icon="fa-file"
                        attrs="{'invisible': [('official_document_missing_count', '=', 0)]}" style="color:white;background-color:red;">
                        <field name="official_document_missing_count" widget="statinfo" string="Missing Documents" style="color:white;background-color:red;"/>
                    </button>
                </xpath>
                <xpath expr="//notebook[last()]" position="inside">
                    <page name="official_document_list" string="Official Documents" attrs="{'invisible': [('student','=',False)]}" >
                        <field name="official_document_ids">
                            <tree string="Programs">
                                <field name="name" />
                                <field name="is_available" />
                                <field name="attachment_ids" widget="many2many_binary" />
                            </tree>
                        </field>
                    </page>
                </xpath>
            </field>
        </record>
        
    </data>
</openerp>