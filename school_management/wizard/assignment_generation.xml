<odoo>
    <record id="assignment_generate_view" model="ir.ui.view">
        <field name="name">Generate Assignments</field>
        <field name="model">school.assigment.generate</field>
        <field name="arch" type="xml">
            <form string="Generation Options">
                <separator string="Generate Assignments"/>
                <label string="This wizard will create all missing assigments for a given year. You can select a set of programs to include, leaving it empty will create all missing assigments."/>
                <group col="4">
                    <field name="year_id"/>
                    <!-- TODO : Add program selection widget -->
                </group>
                <footer>
                    <button name="generate_assigments" string="Generate Assignments" type="object" default_focus="1" class="oe_highlight"/>
                    or
                    <button string="Cancel" class="oe_link" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <record id="action_assignment_generate_view" model="ir.actions.act_window">
        <field name="name">Generate Assignments</field>
        <field name="res_model">school.assigment.generate</field>
        <field name="type">ir.actions.act_window</field>
        <field name="view_type">form</field>
        <field name="view_mode">form</field>
        <field name="view_id" ref="assignment_generate_view"/>
        <field name="context">{}</field>
        <field name="target">new</field>
    </record>

    <menuitem id="menu_assignment_generate"
        name="Generate assigments"
        action="action_assignment_generate_view"
        parent="menu_assignment" sequence="50"/>
    
</odoo>